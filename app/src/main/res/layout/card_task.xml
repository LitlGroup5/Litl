<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    card_view:cardCornerRadius="5dp"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="260dp"
            android:adjustViewBounds= "true"
            android:id="@+id/ivBackground"
            android:scaleType="centerCrop"
            android:transitionName="backgroundImage"
            />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#66000000">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/ivAvatar"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDescription"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:textColor="@color/colorLight"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDeadlineDate"
                    android:maxLines="1"
                    android:textColor="@color/colorLight"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/tvAddress"
                    android:textColor="@color/colorLight"
                    />
            </LinearLayout>
        </LinearLayout>

        <com.like.LikeButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-3dp"
            android:id="@+id/btnBookmark"
            app:like_drawable="@drawable/ic_bookmark_filled"
            app:unlike_drawable="@drawable/ic_bookmark_border"
            app:dots_primary_color="@color/colorSkyBlue"
            app:dots_secondary_color="@color/colorPrimary"
            app:circle_start_color="@color/colorPrimary"
            app:circle_end_color="@color/colorAccent"
            app:icon_size="50dp"
            app:anim_scale_factor="1"
            app:is_enabled="true"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>