<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivMediaImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <com.yqritc.scalablevideoview.ScalableVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scalableType="centerCrop" />

    <!--<com.wang.avi.AVLoadingIndicatorView-->
        <!--android:id="@+id/avi"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:visibility="visible"-->
        <!--app:indicatorColor="@color/colorPrimary"-->
        <!--app:indicatorName="LineSpinFadeLoaderIndicator" />-->

    <com.crystal.crystalpreloaders.widgets.CrystalPreloader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:crs_pl_style="skype_balls"
        app:crs_pl_size="small"
        app:crs_pl_fg_color="#000"
        app:crs_pl_bg_color="#fff"
        android:id="@+id/cyrstalPreLoader"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/ibCaptureImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="#00ffffff"
            android:src="@drawable/ic_add_photo"
            android:visibility="invisible" />


        <ImageButton
            android:id="@+id/ibSelectImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="#00ffffff"
            android:src="@drawable/ic_add_gallery"
            android:visibility="invisible" />


        <ImageButton
            android:id="@+id/ibCaptureVideo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="#00ffffff"
            android:src="@drawable/ic_add_video"
            android:visibility="invisible" />

    </LinearLayout>
</FrameLayout>