<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.litlgroup.litl.activities.CreateTaskActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTitle"
        android:layout_marginTop="14dp"
        android:hint="Title"

        android:layout_below="@+id/ivTaskImage"
        android:layout_alignLeft="@+id/etDescription"
        android:layout_alignStart="@+id/etDescription"
        android:layout_alignRight="@+id/etDescription"
        android:layout_alignEnd="@+id/etDescription"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDescription"
        android:layout_below="@+id/etTitle"
        android:layout_marginTop="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="Description" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPrice"
        android:textAlignment="center"
        android:hint="Price"
        android:layout_below="@+id/etAddress"
        android:layout_alignLeft="@+id/spCategory"
        android:layout_alignStart="@+id/spCategory"
        android:layout_marginTop="14dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spCategory"
        android:layout_below="@+id/etPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:spinnerMode="dropdown"
        android:entries="@array/categories_array_values"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8/22/2016"
        android:id="@+id/tvDueDate"
        android:layout_alignBaseline="@+id/etPrice"
        android:layout_alignBottom="@+id/etPrice"
        android:layout_alignRight="@+id/spCategory"
        android:layout_alignEnd="@+id/spCategory"
        android:layout_marginRight="14dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/ivTaskImage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ikea_assembly"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/btnPostTask"
        android:layout_below="@+id/spCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAddress"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etDescription"
        android:layout_alignStart="@+id/etDescription"
        android:layout_alignRight="@+id/etDescription"
        android:layout_alignEnd="@+id/etDescription"
        android:layout_marginTop="14dp"
        android:hint="Address" />
</RelativeLayout>
