<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/app_bar_media_pager"
        android:id="@+id/include" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivProfileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center"
            android:src="@drawable/offer_profile_image"
            android:alpha="0.5" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/ivDataBackground"
                tools:src="@color/colorSkyBlue"
                android:scaleType="centerCrop"
                android:alpha="0.5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="14dp"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="John Doe"
                android:id="@+id/etProfileName"
                android:layout_alignParentTop="true"
                android:background="@color/colorTransparent"
                android:textStyle="bold"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">



                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ibAddConnection"
                        android:layout_gravity="fill"
                        android:src="@drawable/ic_add_connection"
                        android:background="@color/colorTransparent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:visibility="invisible"

                        />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ibProfileEdit"
                        android:layout_gravity="fill"
                        android:adjustViewBounds="true"
                        android:src="@android:drawable/ic_menu_edit"
                        android:background="@color/colorTransparent"
                        android:visibility="invisible"
                        />


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ibRemoveConnection"
                        android:layout_gravity="fill"
                        android:src="@drawable/ic_connection_added"
                        android:background="@color/colorTransparent"
                        android:visibility="invisible"
                        />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ibProfileSave"
                        android:layout_gravity="fill"
                        android:adjustViewBounds="true"
                        android:src="@android:drawable/ic_menu_save"
                        android:background="@color/colorTransparent"
                        android:visibility="invisible"

                        />

                </FrameLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="john.doe@somemail.com"
                    android:id="@+id/etProfileEmail"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorTransparent"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="32dp" />


            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="About Me"
                android:id="@+id/textView2"
                android:layout_marginTop="14dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etAboutMe"
                android:layout_marginTop="14dp"
                android:background="@color/colorTransparent"
                tools:text="I&apos;m a freelance carpenter who enjoys giving woodwork an artistic touch that suits not just your needds but also your room."
                android:layout_marginBottom="14dp"
                android:hint="Say something about yourself" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginRight="7dp"
                    android:adjustViewBounds="true"
                    android:src="@android:drawable/ic_menu_mapmode" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvProfileAddress"
                android:hint="Address"
                android:ellipsize="end"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginRight="7dp"
                    android:adjustViewBounds="true"
                    android:src="@android:drawable/ic_menu_manage" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/etSkills"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"
                    android:text="Carpentry\nMasonry\nGeneral"
                    android:textSize="13dp" />


            </LinearLayout>

        </LinearLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbUserRating"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:stepSize="0.5"
            android:rating="3"
            android:numStars="5"
            android:isIndicator="true"
            />


    </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>