<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/app_bar_media_pager"
        android:id="@+id/include" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/ivDataBackground"
                tools:src="@color/colorSkyBlue"
                android:scaleType="centerCrop"
                android:alpha="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="14dp"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="John Doe"
                android:id="@+id/etProfileName"
                android:background="@color/colorTransparent"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:enabled="false" />



            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile_email"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"
                    android:id="@+id/ibProfileEmail" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="john.doe@somemail.com"
                    android:id="@+id/etProfileEmail"
                    android:background="@color/colorTransparent"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/etProfileName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:enabled="false"
                    android:layout_gravity="center"
                    android:layout_weight="0.8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibContactPhone"
                    android:layout_alignBottom="@+id/etContactNo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorTransparent"
                    android:src="@drawable/ic_action_name"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginRight="7dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:ems="10"
                    android:id="@+id/etContactNo"
                    android:background="@color/colorTransparent"
                    android:textStyle="bold"
                    android:hint="Phone"
                    android:textColor="#ffffff"
                    tools:text="3214597836"
                    android:layout_below="@+id/etProfileEmail"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="7dp"
                    android:visibility="visible"
                    android:layout_weight="0.8" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/ic_profile_bio"
                    android:layout_gravity="center"
                    android:layout_weight="0.2" />

                <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etAboutMe"
                android:layout_marginTop="7dp"
                android:background="@color/colorTransparent"
                tools:text="I&apos;m a freelance carpenter who enjoys giving woodwork an artistic touch that suits not just your needs but also your room."
                android:layout_marginBottom="14dp"
                android:hint="Say something about yourself"
                android:textColor="#ffffff"
                android:layout_weight="0.8" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginRight="7dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_profile_address" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvProfileAddress"
                android:hint="Address"
                android:ellipsize="end"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginRight="7dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_profile_categories" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/etSkills"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"
                    android:text="Carpentry\nGeneral\nPlumbing"
                    android:textSize="13dp"
                    android:textColor="#ffffff" />


            </LinearLayout>

        </LinearLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbUserRating"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:stepSize="1"
            android:rating="3"
            android:numStars="5"
            android:isIndicator="true"
            android:background="#66c8c8c8"
            android:visibility="invisible" />


    </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>