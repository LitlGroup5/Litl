<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.litlgroup.litl">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.LitlApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WallActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TaskDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.BidSelectScreenActivity" />
        <activity android:name=".activities.CreateTaskActivity"></activity>
    </application>

</manifest>